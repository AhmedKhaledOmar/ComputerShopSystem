@model ComputerShopSystem.ViewModel.EditViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Device Category : @Model.Category.Name</h2>
@using (Html.BeginForm("ProcessDevice", "Device"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Device.Name)
        @Html.TextBoxFor(m => m.Device.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Device.SerialNo)
        @Html.TextBoxFor(m => m.Device.SerialNo, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Device.AcquisitionDate)
        @Html.TextBoxFor(m => m.Device.AcquisitionDate, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Device.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary" type="submit">Next</button>
}

